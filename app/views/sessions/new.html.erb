<div class="row">
	<%= form_for(:session, :html => { role: "form", class: "form-horizontal"}, url: login_path) do |f|%>
	<div class="col-sm-8 col-sm-offset-2">
		<div class="form-group">
			<%= f.label :email, class: "col-sm-2  label-control"%>
			<div class="col-sm-8">
				<%= f.email_field :email, class: "form-control"%>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :password, class: "col-sm-2   label-control"%>
			<div class="col-sm-8">
				<%= f.password_field :password, class: "form-control"%>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-8 col-sm-offset-4">
				<%= f.submit "Sign in", class: "btn btn-lg btn-primary"%>
			</div>
		</div>
	</div>
	<% end %>
</div>
