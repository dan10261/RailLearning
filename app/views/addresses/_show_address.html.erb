<label class="col-sm-2 control-label">Street </label>
<div class="col-sm-10">
	<%= simple_format(obj.street1, class: "form-control-static detail-user-content" )%> 
</div><!---address street1---->

<label class="col-sm-2 control-label">City</label>
<div class="col-sm-10">
	<%=  simple_format(obj.city, class: "form-control-static detail-user-content") %> 
</div><!---address City---->

<label class="col-sm-2 control-label">State</label>
<div class="col-sm-10 ">
	<%=  simple_format(obj.state,  class: "form-control-static detail-user-content") %> 
</div><!---address state---->		


<label class="col-sm-2 control-label">Zip Code</label>
<div class="col-sm-10">
	<%=  simple_format("#{obj.zip4} - #{obj.zip5}",  class: "form-control-static detail-user-content") %> 
</div><!---address Zip 4 + 5---->
