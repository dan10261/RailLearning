		<%= link_to 'Edit address' , edit_address_path(obj), class: "btn btn-xs btn-success"%>
		<%= link_to 'Delete address' , address_path(obj), method: :delete, 
														data: {confirm: "Are you sure to delete this address? "}, 
														class: "btn btn-xs btn-danger"%>
</div>
