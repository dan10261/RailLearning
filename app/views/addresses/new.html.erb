<%= render 'shared/errors', obj: @address%>
<div class="row">
	<div class="col-sm-12">		
		<div class="col-sm-9 col-sm-offset-3">
			<h1>Add a new address for <%= @glsuser.firstname %> &nbsp;<%= @glsuser.lastname %></h1>
		</div>
		<%= form_for(@address, :html => {class: "form-horizontal", role: "form"}) do |f|%>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :street1 %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :street1, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :city %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :city, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :state %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :state, class: "form-control" %>
				</div>
			</div>			
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :zip5 %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :zip5, class: "form-control" %>
				</div>
			</div>	
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :zip4 %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :zip4, class: "form-control" %>
				</div>
			</div>
			<%= f.hidden_field :glsuser_id%>
			<div class="form-group">
				<div class="col-sm-6 col-sm-offset-4">
					<%= f.submit(@address.new_record?? "Create a new address" : "update this address",  class: "btn btn-lg btn-primary") %>
				</div>
			</div>	
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-4">	
					[ <%= link_to 'Back to user detail' , glsuser_path(@glsuser)%> ]
				</div>
			</div>	
			
		<% end %>
	</div>
</div>