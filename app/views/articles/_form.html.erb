<div class="row">
<div class="col-sm-offset-2 col-sm-8 well">
<%= form_with(model: article, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "control-label col-sm-4" %>
    <%= form.text_field :title, class: "form-control col-sm-8" %>
  </div>

  <div class="form-group">
    <%= form.label :description,class: "control-label col-sm-4" %>
    <%= form.text_area :description, class: "form-control col-sm-8" %>
  </div>
	 <div class="form-group col-sm-12">
	 	<%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
	 			<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text}%>
	 	<% end %>
	 </div>
  <div class="center form-group col-sm-12">
    <%= form.submit(class: "btn btn-primary btn-lg") %>
  </div>
<% end %>
 </div>
</div>